<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctoresInsertarActivity">

    <TextView
        android:id="@+id/doc_agregar_tv_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo"
        android:gravity="center"
        android:layout_marginTop="25sp"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/doc_agregar_tv_subtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nuevo"
        android:layout_below="@id/doc_agregar_tv_titulo"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/doc_agregar_ed_codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doc_agregar_tv_subtitulo"
        android:hint="Codigo"
        android:gravity="center"
        android:layout_marginTop="15sp"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/doc_agregar_ed_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doc_agregar_ed_codigo"
        android:hint="Nombre"
        android:gravity="center"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/doc_agregar_ed_apellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doc_agregar_ed_nombre"
        android:hint="Apellido"
        android:gravity="center"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/doc_agregar_ed_direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doc_agregar_ed_apellido"
        android:hint="Direccion"
        android:gravity="center"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/doc_agregar_ed_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doc_agregar_ed_direccion"
        android:hint="Telefono"
        android:gravity="center"
        android:inputType="number"
        />

    <Button
        android:id="@+id/doc_agregar_btn_guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doc_agregar_ed_telefono"
        android:text="Guardar"

        />

</RelativeLayout>